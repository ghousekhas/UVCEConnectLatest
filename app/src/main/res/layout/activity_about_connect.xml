<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutConnect">

    <include layout="@layout/activity_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/toolbar_main">

    <com.google.android.gms.maps.MapView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:padding="10dp"
        android:id="@+id/mapview"
        />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/Grey_layout">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5sp"
                    android:elevation="50dp"
                    android:id="@+id/g2c2_card1"
                    app:cardUseCompatPadding="true"
                    app:cardPreventCornerOverlap="true">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/blue_border">
                        <TextView
                            android:id="@+id/card1_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textSize="20sp"
                            android:fontFamily="@font/nunito_extralight"
                            android:autoLink="all"
                            android:textColorLink="#9C27B0" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5sp"
                    android:elevation="50dp"
                    android:id="@+id/g2c2_card2"
                    app:cardUseCompatPadding="true"
                    android:layout_below="@id/g2c2_card1"
                    app:cardPreventCornerOverlap="true">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/blue_border">
                        <TextView
                            android:id="@+id/card2_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textSize="20sp"
                            android:fontFamily="@font/nunito_extralight"
                            android:autoLink="all"
                            android:textColorLink="#9C27B0" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5sp"
                    android:elevation="50dp"
                    app:cardUseCompatPadding="true"
                    app:cardPreventCornerOverlap="true"
                    android:layout_below="@id/g2c2_card2">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/blue_border">
                        <TextView
                            android:id="@+id/card3_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textSize="20sp"
                            android:fontFamily="@font/nunito_extralight"
                            android:autoLink="all"
                            android:textColorLink="#9C27B0" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>



</RelativeLayout>